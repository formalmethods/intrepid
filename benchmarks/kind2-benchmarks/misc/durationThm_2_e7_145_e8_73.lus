node Age (p: bool) returns (age_of_p: int);
let
 age_of_p = 0 -> if pre(p) then pre(age_of_p) + 1 else 0;
tel
node top (k0: int; p, q, r, t : bool) returns (OK: bool);
var k: int;
    env : bool;
let
    k = k0-> pre(k);
    env = Sofar((k>=1) and (Age(p)>=k => q)  and (Age(r)>=k => t));
    OK = env => ((Age(p and r)>=k) => (q and t));
  --%MAIN;
  --%PROPERTY OK;
tel
